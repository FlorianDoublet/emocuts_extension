{
  "name": "EmoCuts",
  "description": "Permet d'utiliser le panel d'Ã©mojis de facebook.com au clavier.",
  "version": "1.0",
  "icons": {
    "700": "emocuts_icon.png"
  },
  "browser_action": {
    "default_icon": "emocuts_icon.png",
    "default_popup": "options.html"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "web_accessible_resources": ["emocuts_icon.png"],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": ["jquery-3.2.0.min.js", "shortcut_handler.js", "languages_handler.js","content.js"],
      "run_at": "document_end"
    }
  ],
  "manifest_version":2
}